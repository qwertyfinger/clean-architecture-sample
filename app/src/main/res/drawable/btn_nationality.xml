<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_checked="true" android:state_pressed="true">
    <shape android:shape="rectangle">

      <solid android:color="@color/buttonGreenPressed"/>

      <corners android:radius="@dimen/corner_radius_mini"/>

    </shape>
  </item>

  <item android:state_checked="true" android:state_pressed="false">
    <shape android:shape="rectangle">

      <solid android:color="@color/buttonGreen"/>

      <corners android:radius="@dimen/corner_radius_mini"/>

    </shape>
  </item>

  <item android:state_checked="false" android:state_pressed="true">
    <shape android:shape="rectangle">

      <solid android:color="@color/buttonGreyPressed"/>

      <corners android:radius="@dimen/corner_radius_mini"/>

    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">

      <solid android:color="@color/buttonGrey"/>

      <corners android:radius="@dimen/corner_radius_mini"/>

    </shape>
  </item>

</selector>
